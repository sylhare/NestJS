{
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["plugin:jest/recommended"],
  "rules": {
    "@typescript-eslint/indent": ["error", 2, { "SwitchCase": 1, "ignoredNodes": [
      "PropertyDefinition",
      "FunctionExpression"
    ] }],
    "@typescript-eslint/semi": ["error", "always"],
    "quotes": ["error", "single"]
  }
}